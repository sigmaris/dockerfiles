FROM debian:bullseye

RUN apt-get update && \
  apt-get install -y bc bison build-essential cpio debhelper \
    device-tree-compiler dosfstools flex gcc-aarch64-linux-gnu \
    gcc-arm-none-eabi git jq kmod libfdt-dev libpython2-dev \
    libpython3-dev libssl-dev lzop mtools parted python2 python3 \
    python3-pyelftools python3-setuptools rsync sudo swig

